{
  "packages": {
    "fts": {
      "release-type": "simple",
      "package-name": "fts",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "regex",
          "path": "gradle.properties",
          "patterns": [
            "version\\s*=\\s*\\d+\\.\\d+\\.\\d+"
          ]
        }
      ],
      "include-component-in-tag": true
    },
    "ksp-processor": {
      "release-type": "simple",
      "package-name": "ksp-processor",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "regex",
          "path": "gradle.properties",
          "patterns": [
            "version\\s*=\\s*\\d+\\.\\d+\\.\\d+"
          ]
        }
      ],
      "include-component-in-tag": true
    }
  },
  "plugins": [
    {
      "type": "sentence-case"
    }
  ]
}
